<!--{template header}-->
<link rel="stylesheet" href="/images/flickr.css" type="text/css">
<script src="/js/page.js" type="text/javascript"></script>

<div class="c_header a_header">
	<a href="space.php?uid=$space[uid]"><img src="<!--{avatar($space[uid],small)}-->" alt="$space[username]" class="avatar" /></a>
	<h1>邮包</h1>
	<a href="space.php?uid=$space[uid]" class="spacelink"><!--{if $space[self]}-->我<!--{else}-->$space[username]<!--{/if}-->的空间</a>
</div>

<div class="tabs_header">
	<ul class="tabs">
	    <!--{loop $ptypes $value}-->
		<li$actives[$value]><a href="space.php?do=post&ptype=<!--{eval echo rawurlencode($value)}-->">$value</a></li>
		<!--{/loop}-->
	</ul>
</div>

<div class="thread_list table_list">
	<table cellspacing="0" cellpadding="0" class="infotable">
		<thead>
			<tr>
                <td>#</td>
                <td>收件人</td>
                <td>收件地址</td>
                <td>校区</td>
                <td>类型</td> 
                <td>寄件地址</td>
                <td>到件日期</td>
			</tr>
		</thead>
        <!--{eval $i = ($page - 1) * 20}-->
		<!--{loop $post[data] $value}-->
		<tr>
            <td><!--{eval echo ++$i}--></td>
        	<td><a href="space.php?do=post&receiver=$value[receiver]">$value[receiver]</a</td>
        	<td><a href="space.php?do=post&address=<!--{eval echo rawurlencode($value[address])}-->">$value[address]</a</td>
        	<td><a href="space.php?do=post&section=$value[section]">$value[section]</a</td>
        	<td><a href="space.php?do=post&ptype=$value[ptype]">$value[ptype]</a</td>
        	<td><a href="space.php?do=post&sendfrom=$value[sendfrom]">$value[sendfrom]</a</td>
        	<td><a href="space.php?do=post&arrival=$value[arrival]">$value[arrival]</a</td>
		</tr>
		<!--{/loop}-->
	</table>
</div>
